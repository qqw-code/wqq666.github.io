#include <stdio.h>
#include <malloc.h>
int main(void)
{
	int i=0,k=0;
	char line[100];

	printf("please input a string:\n");
	while((line[k]=getchar())!='\n')
		k++;
	line[k]='\0';
	
	k=k-1;
	while(i<k)
	{
		if(line[i]!=line[k])
			break;
		i++;
		k--;
	}
	if(i>=k)
		printf("是回文\n");
	else 
		printf("不是回文\n");

	return 0;
}
